  "shadows": {
    "none": "none",
    "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px rgba(0, 0, 0, 0.07), 0 2px 4px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.08)",
    "xl": "0 20px 25px rgba(0, 0, 0, 0.12), 0 10px 10px rgba(0, 0, 0, 0.08)",
    "2xl": "0 25px 50px rgba(0, 0, 0, 0.15), 0 12px 20px rgba(0, 0, 0, 0.12)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.05)"
  },
  "elevations": {
    "meta": "Semantic elevation scale for depth hierarchy (z-0 to z-5)",
    "z-0": {
      "description": "Base layer (page background)",
      "shadow": "none",
      "usage": ["body backgrounds", "full-page containers"]
    },
    "z-1": {
      "description": "Slightly raised (cards on page, input fields)",
      "shadow": "sm",
      "usage": ["cards", "form inputs", "static content panels"]
    },
    "z-2": {
      "description": "Raised (hover states, active cards)",
      "shadow": "md",
      "usage": ["card hover", "active selection", "raised panels"]
    },
    "z-3": {
      "description": "Floating (dropdowns, popovers)",
      "shadow": "lg",
      "usage": ["dropdown menus", "popovers", "tooltips (simple)"]
    },
    "z-4": {
      "description": "Modal backdrop content",
      "shadow": "xl",
      "usage": ["modals", "dialogs", "sheets", "command palettes"]
    },
    "z-5": {
      "description": "Tooltips, top-level modals",
      "shadow": "2xl",
      "usage": ["tooltips (rich)", "top-level alerts", "critical modals"]
    }
  },
  "gradients": {
    "meta": "Subtle gradient presets following S-tier principles",
    "subtle-vertical": {
      "value": "linear-gradient(to bottom, var(--color-neutral-50), var(--color-neutral-100))",
      "description": "Subtle background depth (light mode)",
      "usage": ["page backgrounds", "section backgrounds"]
    },
    "subtle-vertical-dark": {
      "value": "linear-gradient(to bottom, var(--color-neutral-900), var(--color-neutral-950))",
      "description": "Subtle background depth (dark mode)",
      "usage": ["page backgrounds (dark)", "section backgrounds (dark)"]
    },
    "subtle-radial": {
      "value": "radial-gradient(circle at top, var(--color-primary)/5, transparent)",
      "description": "Radial accent wash from top",
      "usage": ["hero sections", "feature highlights"]
    },
    "accent-wash": {
      "value": "linear-gradient(to bottom, var(--color-primary)/5, var(--color-primary)/15)",
      "description": "Vertical accent wash",
      "usage": ["call-to-action backgrounds", "highlighted sections"]
    },
    "glass": {
      "value": "linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05))",
      "description": "Glass morphism effect",
      "usage": ["overlays", "frosted glass cards"]
    }
  },
  "gradientRules": {
    "meta": "Rules enforced by design-lint.js",
    "maxStops": 2,
    "maxOpacityDelta": "20%",
    "preferredAngles": ["to bottom", "to top", "to right", "to left"],
    "avoidDiagonals": true,
    "avoidMultiColor": "Prefer monochromatic gradients (same color family)",
    "examples": {
      "good": [
        "from-blue-500/5 to-blue-500/15 (subtle monochrome)",
        "from-gray-50 to-gray-100 (neutral depth)"
      ],
      "bad": [
        "from-purple-500 via-pink-500 to-red-500 (multi-color, too many stops)",
        "from-black to-white (too high contrast)",
        "bg-gradient-to-br (diagonal angle)"
      ]
    }
  },
  "borderRadius": {
    "none": "0px",
    "sm": "0.125rem",
    "DEFAULT": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
