{
  "name": "spec-flow",
  "version": "10.13.0",
  "description": "Spec-Driven Development workflow toolkit for Claude Code - Build high-quality features faster with repeatable AI workflows",
  "keywords": [
    "claude",
    "ai",
    "workflow",
    "spec-driven",
    "development",
    "roadmap",
    "planning",
    "automation"
  ],
  "homepage": "https://github.com/marcusgoll/Spec-Flow#readme",
  "bugs": {
    "url": "https://github.com/marcusgoll/Spec-Flow/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcusgoll/Spec-Flow.git"
  },
  "license": "MIT",
  "author": "Marcus Gollahon <marcus@example.com>",
  "bin": {
    "spec-flow": "bin/cli.js"
  },
  "files": [
    "dist/",
    "bin/",
    "scripts/build-dist.js"
  ],
  "scripts": {
    "build": "node scripts/build-dist.js",
    "prepublishOnly": "npm run build",
    "postinstall": "node bin/postinstall.js",
    "setup:roadmap": "node bin/setup-roadmap.js",
    "setup:roadmap:labels": "bash .spec-flow/scripts/bash/setup-github-labels.sh || pwsh -File .spec-flow/scripts/powershell/setup-github-labels.ps1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "colorjs.io": "^0.5.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6"
  }
}
